<dataController name="UsersCompany" conflictDetection="overwriteChanges" label="Users Company" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text">
      <text><![CDATA[
select
	"UsersCompany"."UserID" "UserID"
	,"User"."UserName" "UserName"
	,"UsersCompany"."CompanyID" "CompanyID"
	,"Company"."CompanyName" "CompanyName"
from "dbo"."UsersCompany" "UsersCompany"
	left join "dbo"."Users" "User" on "UsersCompany"."UserID" = "User"."UserID"
	left join "dbo"."Company" "Company" on "UsersCompany"."CompanyID" = "Company"."CompanyID"
]]></text>
    </command>
  </commands>
