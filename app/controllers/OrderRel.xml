  <businessRules>
    <rule id="r105" commandName="New" type="Code" phase="Execute" />
    <rule id="r100" commandName="Select" type="Sql" phase="Execute"><![CDATA[SELECT @OHCompany = b.CompanyName, @OHCustNum = a.CustNum, @OHCustID=a.CustID, @OrderHedBulkOrder = a.BulkOrder , @OrderHedID=a.OrderHedID
FROM OrderHed a
INNER JOIN Company b
ON a.CompanyID=b.CompanyID
WHERE A.OrderHedID=@OrderHedID]]></rule>
    <rule id="r101" commandName="New" type="Sql" phase="Execute"><![CDATA[Select @ShipToSysRowID = b.ShipToSysRowID,		
		@ShipByDate = b.ReqShipDate,
		@ShipToName = b.ShipToName,
		@OHCompany = c.CompanyName,
		@OHCustNum = b.CustNum,
		@OHCustID = b.CustID ,
		--@OrderRelQty = a.OrderQty ,
		--@FocrelQty =  a.FOCQty ,
		@OrderHedBulkOrder = b.BulkOrder
		, @OrderHedID=b.OrderHedID
From OrderDtl a
INNER JOIN OrderHed b
ON a.OrderHedID=b.OrderHedID
INNER JOIN Company c
ON b.CompanyID=c.CompanyID
Where OrderDtlID=@OrderDtlID

--IF @OrderHedBulkOrder = 1
--BEGIN
