    <rule id="r109" commandName="Select" type="Sql" phase="Execute"><![CDATA[SELECT @OHCompany = b.CompanyName, @OrderType = a.OrderType, @OHCustNum=CustNum 
FROM OrderHed a
INNER JOIN Company b
ON a.CompanyID=b.CompanyID
WHERE A.OrderHedID=@OrderHedID

IF @OrderType = 'N'
